- content_for :page_title, "Contains an applicator"
- content_for :after_header do
  = link_to "Back", previous_wizard_path, class: "govuk-back-link"

- title_text = "Does #{@component_name} come in an applicator?"
- hint_text = "For example, a spray, a patch or encapsulated"

= form_with model: @component, url: wizard_path, method: :put do |form|
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      = render "form_components/govuk_error_summary", form: form
      = render "form_components/govuk_radios", form: form, key: :contains_special_applicator,
            fieldset: { legend: { text: title_text, classes: "govuk-label--xl", isPageHeading: true } },
            hint: { text: hint_text },
            items: [{ text: "Yes", value: :yes },
                    { text: "No", value: :no }]
      = form.submit "Continue", class: "govuk-button"
