- content_for :page_title, "Add activity"
- content_for :header_extension do
  = render "investigations/action_bar", investigation: @investigation
- content_for :after_header do
  .govuk-grid-row
    .govuk-grid-column-one-third
      = link_to "Back", @investigation, class: "govuk-back-link"

.govuk-grid-row
  .govuk-grid-column-two-thirds
    h1.govuk-heading-l
      span.govuk-caption-l = @investigation.pretty_description
      | Add comment
    = form_with(model: CommentActivity.new, url: investigation_activities_path(@investigation)) do |form|
      = render "form_components/govuk_textarea", key: :body, form: form, attributes: { maxlength: 10000 },
              label: { text: "Comment text", classes: "govuk-visually-hidden" }
      = form.submit "Continue", class: "govuk-button"
