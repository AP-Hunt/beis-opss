- content_for :page_title, "View case"
- content_for :after_header do
  = render "breadcrumbs_navigation", breadcrumbs: @breadcrumbs

.govuk-grid-row
  .govuk-grid-column-two-thirds-from-desktop
    = render "investigation_heading", investigation: @investigation

hr.govuk-section-break.govuk-section-break--m

= render "components/tabs", tabs: [\
  Tab.new("overview", "Overview", "Summary", lambda { render "investigations/tabs/overview" }),
  Tab.new("products", "Products (#{@investigation.products.count})", "Products",
  lambda { render "investigations/tabs/products" }),
  Tab.new("businesses", "Businesses (#{@investigation.businesses.count})", "Businesses",
  lambda { render "investigations/tabs/businesses" }),
  Tab.new("attachments", "Attachments (#{@investigation.documents.count})", "Attachments",
  lambda { render "investigations/tabs/attachments" }),
  Tab.new("activity", "Activity", "Activity", lambda { render "investigations/tabs/activity" })\
]
