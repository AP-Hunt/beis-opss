<%= form_with(model: form_model, local: true) do |form| %>
  <%= render 'businesses/core_params', form: form, business: business %>

  <div class="form-group">
    <%= form.label :additional_information, :class => "form-label" %>
    <%= form.text_area :additional_information, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save business", :class => "govuk-button" %>
  </div>
<% end %>
