<% content_for :page_title, "Investigation businesses - Market Surveillance & Product Safety" %>

<%= link_to 'Back to investigation', @investigation, class: "govuk-back-link" %>

<%= render "investigation_heading", investigation: @investigation %>

<h2 class="govuk-heading-l govuk-!-margin-bottom-2">Manage businesses</h2>
<%= link_to 'Add business', search_investigation_businesses_path(@investigation) %>

<div class="govuk-!-padding-top-8">
    <% if @investigation.businesses.any? %>
        <% @investigation.businesses.each do |business| %>
            <%= render "business_summary", business: business, allow_removing: true %>
        <% end %>
    <% else %>
        <p>No businesses.</p>
    <% end %>
</div>
