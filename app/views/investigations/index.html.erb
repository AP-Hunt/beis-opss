<p id="notice"><%= notice %></p>

<h1>Investigations</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Is closed</th>
      <th>Source</th>
      <th>Severity</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investigations.each do |investigation| %>
      <tr>
        <td><%= investigation.description %></td>
        <td><%= investigation.is_closed %></td>
        <td><%= investigation.source %></td>
        <td><%= investigation.severity %></td>
        <td><%= investigation.product %></td>
        <td><%= link_to 'Show', investigation %></td>
        <td><%= link_to 'Edit', edit_investigation_path(investigation) %></td>
        <td><%= link_to 'Destroy', investigation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

