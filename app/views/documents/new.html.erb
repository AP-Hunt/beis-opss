<% content_for :page_title, "New document - Market Surveillance & Product Safety" %>

<%= link_to 'Back', associated_documents_path(@parent), class: "govuk-back-link" %>

<h1 class="heading-xlarge">New document</h1>

<%= form_with scope: :document, url: associated_documents_path(@parent), local: true do |form| %>
  <div class="form-group">
    <%= form.label :file, "Browse for file", :class => "govuk-label" %>
    <%= form.file_field :file, :class => "govuk-file-upload" %>
  </div>

  <div class="form-group">
    <%= form.submit "Upload", :class => "govuk-button" %>
  </div>
<% end %>
