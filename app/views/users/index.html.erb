<% content_for :page_title, "Users - Market Surveillance" %>

<div class="users-page">
    <div class="grid-row">
        <div class="column-full">
            <h1 class="heading-xlarge">Users</h1>
            <%= link_to "Invite user", new_user_invitation_path, :class => "button" %><br /><br />
            <table>
                <tbody>
                    <tr>
                        <th>Email</th>
                        <% Role.all.each do |role| %>
                            <th>
                                <%= role.name.titleize %>
                            </th>
                        <% end %>
                        <th></th>
                        <th></th>
                    </tr>
                    <% @users.each do |user| %>
                        <tr>
                            <%= render user %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>