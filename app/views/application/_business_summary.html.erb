<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <table class="govuk-table">
      <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Name</th>
          <td class="govuk-table__cell"><%= business.company_name %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Type</th>
          <td class="govuk-table__cell"><%= business.nature_of_business %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Primary address</th>
          <td class="govuk-table__cell"><%= business.primary_address&.summary %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "Full business details", business %>
    <% if allow_removing %>
      <div class="form-group govuk-!-margin-top-3">
        <%= link_to 'Remove', investigation_business_path(@investigation, business),
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: "button-warning"
        %>
      </div>
    <% end %>
  </div>
</div>