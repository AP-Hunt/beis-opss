<% content_for :page_title, "New product - Market Surveillance & Product Safety" %>
<%# The data attribute is used by JS to determine if there is an investigation %>
<div class="new-product-page products-search-form">
    <%= link_to 'Back to list', products_path, class: "govuk-back-link" %>

    <h1 class="govuk-heading-xl">New product</h1>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <h3 class="govuk-heading-m govuk-!-margin-bottom-2">Product details</h3>
            <%= render 'form', product: @product, countries: @countries, form_model: @product %>
        </div>
        <div class="govuk-grid-column-one-half">
            <%= render "suggestions_container" %>
        </div>
    </div>
</div>
