<% content_for :page_title, "New product - Market Surveillance & Product Safety" %>
<%# The data attribute is used by JS to determine if there is an investigation %>
<div class="new-product-page" data-investigation-id=<%= @investigation&.id %>>
    <div class="breadcrumbs">
        <ol role="breadcrumbs">
            <li>
                <a href="/">Home</a>
            </li>
            <% if @investigation.present? %>
                <li>
                    <%= link_to 'Investigations', investigations_path %>
                </li>
                <li>
                    <%= link_to 'Investigation', @investigation %>
                </li>
                <li>
                    <%= link_to 'New Product', new_investigation_product_path(@investigation) %>
                </li>
            <% else %>
                <li>
                    <%= link_to 'Products', products_path %>
                </li>
                <li>
                    <%= link_to 'New', new_product_path %>
                </li>
            <% end %>
        </ol>
    </div>

    <%= link_to 'Back', @investigation.presence || products_path, class: "govuk-back-link link-back" %>

    <h1 class="heading-xlarge">New product</h1>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <%= form_with(model: @product, url: @post_url, local: true) do |form| %>
                <%= render 'core_params', form: form, product: @product, countries: @countries %>
                <div class="form-group">
                    <%= form.submit "Create new", :class => "govuk-button" %>
                </div>
            <% end %>
        </div>
        <div class="govuk-grid-column-one-half">
            <h2 class="heading-medium">Suggested products</h2>
            <div id="suggested-products">
                Start filling in the form for suggestions.
            </div>
        </div>
    </div>
    <%= link_to 'Back', products_path, :class => "link-back" %>
</div>
