<table class="govuk-!-margin-bottom-3">
  <thead>
    <tr>
      <% if form %>
        <th class="not-implemented"colspan="1"></th>
      <% end %>
      <th>Name</th>
      <th>Brand</th>
      <th>Origin Co</th>
      <th>Cases</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <% if form %>
          <td class="not-implemented"><%= form.check_box :product_ids, { multiple: true }, product.id, false %></td>
        <% end %>
        <td><%= link_to product.name, product %></td>
        <td><%= product.brand %></td>
        <td><%= product.country_of_origin_for_display %></td>
        <td>
          <span class="investigations">
            <%= product.investigations.count %>
          </span>
        </td>
      </tr>
    <% end %>
    <% if @products.empty? %>
    <tr>
      <td>No products found.</td>
    </tr>
    <% end %>
  </tbody>
</table>
