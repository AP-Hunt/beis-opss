<% content_for :page_title, "Add product - Market Surveillance & Product Safety" %>
<%# The data attribute is used by JS to determine if there is an investigation %>
<div class="new-product-page" data-investigation-id=<%= @investigation.id %>>
    <div class="breadcrumbs">
        <ol role="breadcrumbs">
            <li>
                <a href="/">Home</a>
            </li>
                <li>
                    <%= link_to 'Investigations', investigations_path %>
                </li>
                <li>
                    <%= link_to 'Investigation', @investigation %>
                </li>
                <li>
                    <%= link_to 'Add Product', new_investigation_products_path(@investigation) %>
                </li>
        </ol>
    </div>

    <%= link_to 'Back', @investigation, class: "govuk-back-link link-back" %>

    <h1 class="heading-xlarge">Add product</h1>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <%= form_with(model: @product, url: new_product_path, local: true, method: :get) do |form| %>
                <%= hidden_field_tag "investigation_id", @investigation.id %>
                <%= render 'core_params', form: form, product: @product, countries: @countries %>
                <div class="form-group">
                    <%= form.submit "Create new", :class => "govuk-button" %>
                </div>
            <% end %>
        </div>
        <div class="govuk-grid-column-one-half">
            <h2 class="heading-medium">Suggested products</h2>
            <div id="suggested-products">
                Start filling in the form for suggestions.
            </div>
        </div>
    </div>
</div>
