- content_for :page_title, "New project"
- content_for :after_header do
  = link_to "Back to Cases", investigations_path, class: "govuk-back-link"
= form_with(model: @investigation, url: project_index_path, method: :post) do |form|
  .govuk-grid-row
    .govuk-grid-column-two-thirds-from-desktop
      = render "form_components/govuk_error_summary", form: form
      h1.govuk-heading-xl
        = "New Project"
      fieldset.govuk-fieldset
        legend.govuk-fieldset__legend.govuk-fieldset__legend--l
          | Please provide a title
        = render "form_components/govuk_input", key: :user_title, form: form, attributes: { maxlength: 100 },
                label: { text: "Title", classes: "govuk-visually-hidden" },
                hint: { text: "This will help other users identify this project" }

      fieldset.govuk-fieldset
        legend.govuk-fieldset__legend.govuk-fieldset__legend--l
          | Project summary
        = render "form_components/govuk_textarea", key: :description, form: form, max_length: 10000,
                label: { text: "Project description", classes: "govuk-visually-hidden" }

      .govuk-form-group
        = form.submit "Continue", class: "govuk-button"
