- label_class = "govuk-fieldset__legend govuk-fieldset__legend--m govuk-!-margin-bottom-2"
fieldset.govuk-fieldset
  - label_html = capture do
    .div class=label_class Trading name
  = render "form_components/govuk_textinput", key: :trading_name, form: form,
          label: { html: label_html },
          hint: { text: "The name the business is known by" }

fieldset.govuk-fieldset
  - label_html = capture do
    .div class=label_class Legal name
  = render "form_components/govuk_textinput", key: :legal_name, form: form,
          label: { html: label_html },
          hint: { text: "The registered name of the company (if you have it)" }

fieldset.govuk-fieldset class=["govuk-!-margin-bottom-5"]
  - label_html = capture do
    .div class=label_class Company number
  = render "form_components/govuk_textinput", key: :company_number, form: form,
          label: { html: label_html },
          hint: { text: "If you have this information" }

= form.fields_for :locations, business.primary_location do |ff|
  fieldset.govuk-fieldset class=["govuk-!-margin-bottom-5"]
    legend.govuk-fieldset__legend.govuk-fieldset__legend--l
      | Address

    = render "form_components/govuk_textinput", key: :address_line_1, form: ff,
            label: { text: "Building and street" }
    = render "form_components/govuk_textinput", key: :address_line_2, form: ff,
            label: { text: "Address line two", classes: "govuk-visually-hidden" }

    = render "form_components/govuk_textinput", key: :city, form: ff,
            label: { text: "Town or city" }

    = render "form_components/govuk_textinput", key: :county, form: ff,
            label: { text: "County" }

    = render "form_components/govuk_textinput", key: :postal_code, form: ff, classes: "govuk-!-width-one-half",
            label: { text: "Postcode" }

    .govuk-form-group
      = ff.label :country, "Country",
              class: "govuk-label"
      = ff.select :country, countries, { include_blank: "" },
            class: "govuk-select", id: "location-autocomplete"

= form.fields_for :contacts, business.primary_contact do |ff|
  fieldset.govuk-fieldset class=["govuk-!-margin-bottom-5"]
    legend.govuk-fieldset__legend.govuk-fieldset__legend--l
      | Contact
    = render "form_components/govuk_textinput", key: :name, form: ff, label: { text: "Name" }
    = render "form_components/govuk_textinput", key: :email, form: ff, label: { text: "Email" }
    = render "form_components/govuk_textinput", key: :phone_number, form: ff, label: { text: "Phone number" }
    = render "form_components/govuk_textinput", key: :job_title, form: ff,
            label: { text: "Job title / description" }

= form.submit local_assigns[:submit_text] || "Save business", class: "govuk-button"
