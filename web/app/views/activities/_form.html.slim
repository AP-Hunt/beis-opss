= form_with(model: [investigation, activity], url: investigation_activities_path(investigation, activity), \
    scope: :activity, local: true) do |form|
  = render "form_validation_display", validated_object: activity
  .govuk-form-group
    = form.label :body, class: "govuk-label"
    = form.text_area :body, class: "govuk-textarea"
  .govuk-form-group
    = form.submit "Submit", class: "govuk-button"
